{
  "name": "Flutter Dev Container", // Updated name
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    // Re-add the Flutter feature section
    "ghcr.io/devcontainers/features/flutter:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code"
      ]
    }
  },
  // Optional: Add back postCreateCommand to auto-run flutter doctor after builds
  "postCreateCommand": "flutter doctor -v",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/bin/bash"
    }
  }
}